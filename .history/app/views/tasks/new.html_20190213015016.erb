<h1>私の家計簿</h1>
<%= form_for(@task) do |f|%>
    <div><%= f.label :'日付' %></div>
    <div class="form-group"><%= f.date_field :date %></div>
    <div><%= f.label :'品目' %></div>
    <div><%= f.text_field :title %></div>
    <div><%= f.label :'場所' %></div>
    <div><%= f.text_field :place %></div>
    <div><%= f.label :'値段' %></div>
    <div><%= f.text_field :price %></div>
    <div class="form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <div><%= f.submit %></div>
<% end %>
<%= link_to '確認', tasks_path%>
