<h1>私の家計簿</h1>
<%= form_for(@task) do |f|%>
    <div><%= f.label :'日付' %></div>
    <div class="form-group"><%= f.date_field :date, class: "form-control" %></div>
    <div><%= f.label :'品目' %></div>
    <div class="form-group"><%= f.text_field :title, class: "form-control", aria-label: "Username" %></div>
    <div><%= f.label :'場所' %></div>
    <div class="form-group"><%= f.text_field :place, class: "form-control" %></div>
    <div><%= f.label :'値段' %></div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
        <span class="input-group-text">¥</span>
        </div>
        <%= f.text_field :price, class: "form-control" %>
    </div>
    <div> <%= f.submit :'提出', class: 'btn btn-light'%></div>
<% end %>
<div>
<button button type="button" class="btn btn-light"><%= link_to '確認', tasks_path%></button>
</div>