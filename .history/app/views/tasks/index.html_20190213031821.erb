<h1 style="padding:15px">ざっくり家計簿 <span class="badge badge-primary" >2019</span></h1>
<div style="padding-top:20px">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">日付</th>
        <th scope="col">品目</th>
        <th scope="col">場所</th>
        <th scope="col">値段</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.date %></td>
          <td><%= task.title %></td>
          <td><%= task.place %></td>
          <td><%= task.price %></td>
          <td><button button type="button" class="btn btn-light"><%= link_to '編集', edit_task_path(task) %></button></td>
          <td><button button type="button" class="btn btn-light"><%= link_to '削除', task_path(task), method: :delete, data: {confirm: "本当に削除しますか？"} %></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>
   <button button type="button" class="btn btn-light"><%= link_to '月別合計', tasks_sum_path %></button>
  <button button type="button" class="btn btn-light"><%= link_to '追加', new_task_path%></button>
</div>